<% include header %>

<div class="container">
    <img src="/img/University_of_Toronto.png" />
    <h1 id="App-title">Create Account</h1>
    <form id="login" class="text-center" name="login" method="post" action="/signup">
        <div class="form-group row">
            <label class="col-2 col-form-label" for="username">Email</label>
            <div class="col-10">
                <input class="form-control col-10" name="username" type="email"/>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="password">Password</label>
            <div class="col-10">
                <input class="form-control col-10" name="password" type="password"/>
            </div>
        </div>
        <div class="form-group">
            <input class="btn" type="submit" value="Sign Up"/>
        </div>
        <div>
            <a class="btn" href="/">Return To Login</a>
        </div>
    </form>
</div>

<% include footer %>